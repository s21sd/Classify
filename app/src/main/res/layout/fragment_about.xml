<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment"
    android:background="@drawable/pagebkg2"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/app_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/applogo"
        tools:ignore="ImageContrastCheck" />


    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_marginTop="16dp"
        android:text="CLASSIFY"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Version 1.0"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/app_version"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/about_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="12dp"
        android:textStyle="bold"
        android:text="This app helps you keep track of your daily schedule and manage your time effectively. It allows you to add, edit, and delete tasks, and view them in a daily, weekly, or monthly format. With customizable reminders and notifications, you'll never miss an important appointment or deadline again."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText,VisualLintLongText,TextContrastCheck" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_description"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/share_github"
            android:layout_margin="32dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/new_github"
            tools:ignore="HardcodedText,RtlHardcoded,VisualLintButtonSize,SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/share_mail"
            android:layout_width="70dp"
            android:layout_margin="32dp"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/new_mail"
            tools:ignore="HardcodedText,RtlHardcoded,VisualLintButtonSize,SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/share_insta"
            android:layout_width="70dp"
            android:layout_margin="32dp"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/new_insta"
            tools:ignore="HardcodedText,RtlHardcoded,VisualLintButtonSize,SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>


</RelativeLayout>