<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="26dp"

    android:layout_marginVertical="20dp">


    <RelativeLayout
        android:id="@+id/rcrelativelayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/themeone"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/timerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="18dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/app"
            android:text="Time"
            android:textSize="16sp"
            tools:ignore="HardcodedText,TextSizeCheck" />


        <TextView
            android:id="@+id/classnamerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/app"
            android:text="Class Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/teachernamerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="62dp"
            android:fontFamily="@font/app"
            android:text="@string/teacher_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/roomnorc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/app"
            android:text="@string/room_no"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>