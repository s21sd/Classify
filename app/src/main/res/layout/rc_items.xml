<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="30dp"
    app:cardCornerRadius="40dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="15dp"
    app:cardBackgroundColor="@color/my_primary">


    <RelativeLayout
        android:id="@+id/rcrelativelayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/navheader"
        android:padding="8dp"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/timerc"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:text="Time"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />


        <TextView
            android:id="@+id/classnamerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp"
            android:text="@string/class_name"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/teachernamerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="62dp"
            android:text="@string/teacher_name"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/roomnorc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="32dp"
            android:text="@string/room_no"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>