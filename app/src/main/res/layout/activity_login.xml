<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/loginbgnew">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="32dp"
        tools:context=".LoginActivity"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/form_layout"
            android:layout_marginTop="300dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:completionThreshold="1"
                android:background="@drawable/lavenderborder"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Email "
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textSize="20sp"
                android:fontFamily="@font/app"
                tools:ignore="HardcodedText,RtlHardcoded,TextContrastCheck,VisualLintTextFieldSize"
                android:importantForAutofill="yes"
                android:autofillHints="" />

            <EditText
                android:id="@+id/pass_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/lavenderborder"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textSize="20sp"
                android:fontFamily="@font/app"
                android:importantForAutofill="yes"
                tools:ignore="Autofill,HardcodedText,RtlHardcoded,VisualLintTextFieldSize,TextContrastCheck" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:text="LogIn"
                android:fontFamily="@font/app"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:id="@+id/progress_bar"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/forgetPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="end"
                android:padding="12dp"
                android:text="Forgot your Password?"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                tools:ignore="HardcodedText,RtlHardcoded,SmallSp,TextContrastCheck,UseCompatTextViewDrawableXml,VisualLintButtonSize" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account ? "
                    android:layout_marginEnd="5dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="20dp"
                    android:textSize="12sp"
                    android:id="@+id/create_account_text_view_btn"
                    android:text="Create Account"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>



</RelativeLayout>