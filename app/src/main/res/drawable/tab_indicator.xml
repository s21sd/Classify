<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lavender color for the left half -->
    <item android:left="0dp" android:right="50dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lavender" />
            <corners android:topLeftRadius="30dp" android:bottomLeftRadius="30dp"/>
        </shape>
    </item>
    <!-- White color for the right half -->
    <item android:left="250dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners  android:topLeftRadius="30dp" android:bottomLeftRadius="30dp" />
        </shape>
    </item>
</layer-list>
